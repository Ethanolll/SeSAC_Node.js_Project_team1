<html>
    <head>
        <title>회원가입</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <script>
            function check_duplicate() {

                let form = document.getElementById("register_form");

                axios({
                    method: "post",
                    url: "http://localhost:8000/user/id_check",
                    data: {
                        id: form.id.value,
                    }
                }).then((response) => {
                    return response.data;
                }).then((data) => {
                    alert(data);
                })
            }
        </script>
    </head>
    <body>
        <form id="register_form">
            <input type="text" name="id" placeholder="아이디를 입력하세요">
            <button type="button" onclick="check_duplicate()">중복확인</button> <br>
            <input type="password" placeholder="비밀번호를 입력하세요"> <br>
            <input type="text" placeholder="이름을 입력하세요"> <br>
            <input type="tel" placeholder="전화번호를 입력하세요(000-0000-0000)"> <br>
            <input type="email" placeholder="이메일을 입력하세요"> <br>
            <button type="button" onclick="register()">회원가입</button>
        </form>
    </body>
</html>