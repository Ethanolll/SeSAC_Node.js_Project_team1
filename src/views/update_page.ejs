<html>
    <head>
        <title>정보수정</title>
        <meta charset="UTF-8">
        
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <link rel = "stylesheet" href = "/css/modify.css">
        <script src="/js/nav.js"></script>

        <script>
            function update() {
                let form = document.getElementById("update_form");

                let result = form.checkValidity();

                if ( !result ) {
                    form.reportValidity();
                    return false;
                }
                
                axios({
                    method: "patch",
                    url: "http://localhost:8000/user/update",
                    data: {
                        id: "<%=user%>",
                        pw: form.pw.value,
                        name: form.name.value,
                        tel: form.tel.value,
                        email: form.email.value
                    }
                }).then((response) => {
                    return response.data;
                }).then((data) => {
                    alert(data);
                })
            }
        </script>
    </head>

    <body>
        <nav>
            <div class="container1">
                <h2 onclick="main_page();">Recipe of <span class="god">GOD</span></h2>
            </div>
        </nav>

        <h1 class="modify_font">정보수정</h1>

        <form id="update_form">
            <table>
                <tr>
                    <td><h3>ID</h3></td>
                    <td class="id"><%=user%></td>
                </tr>
            </table>
            <h3>PASSWORD</h3>
            <input type="password" name="pw" value="<%=pw%>" class="txtb" required> <br>
            <h3>NAME</h3>
            <input type="text" name="name" value="<%=name%>" class="txtb" reauired> <br>
            <h3>PHONE NUMBER</h3>
            <input type="text" name="tel" value="<%=tel%>" class="txtb"> <br>
            <h3>EMAIL</h3>
            <input type="text" name="email" value="<%=email%>" class="txtb" reauired> <br>
            <button type="button" onclick="update()" class="register_btn">정보 수정</button>
        </form>
    </body>
</html>