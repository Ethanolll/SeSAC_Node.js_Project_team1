<html>
    <head>
        <title>프로필</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="/css/box.css">
        <link rel="stylesheet" href="/css/nav.css">
        <link rel="stylesheet" href="/css/profile_tab.css">
        <link rel="stylesheet" href="/css/profile_content.css">
        <script src="/js/profile_1.js"></script>

        <script src="https://kit.fontawesome.com/c35f3dd7d0.js" crossorigin="anonymous"></script>

        <script>
            function update_btn() {
                location.href = "/user/update"
            }
            function delete_user() {
                axios({
                    method: "delete",
                    url: "http://localhost:8000/user/delete",
                    data: {
                        id: "<%=user%>"
                    }
                }).then((response) => {
                    return response.data;
                }).then((data) => {
                    alert(data);
                    location.href = "/";
                })
            }
        </script>
    </head>
    <body>
        <%-include('nav.ejs') %>
        <script src="/js/nav.js"></script>

        <div id="container">
    
            <!-- profile 부분 -->
            <div id="profile">
                <h1 class="myPageText">마이페이지</h1>
                <div id="information">
                    <div id="boxInfo">
                            <div id="photo">
                                <img src="/img/people.png" width="100px" height="80px">
                            </div>
                            <div id="modify">
                                <p onclick="update_btn();">정보수정</p>
                            </div>
                            <div id="delete">
                                <p onclick="delete_user();">회원탈퇴</p>
                            </div>
                    </div>
                    <table class="memberInfo" border="0">
                        <tr class="name">
                            <td><%=name%></td>
                        </tr>
                        <tr class="phoneNumber">
                            <td class="phone">전화번호</td>
                            <td><%=tel%></td>
                        </tr>
                        <tr class="email">
                            <td class="mail">이메일</td>
                            <td><%=email%></td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Tab 부분  -->
            <div class= "tab_div">
                <!-- Tab menu 부분 -->
                <div class="tabs_menu">
                    <div class="tabs_box">
                        <div class="tabs_box1">
                            <ul class="tabs">
                                <li id="tab1"> 레시피 </li>
                                <li id="tab2"> 요리 후기</li>
                                <li id="tab3"> 댓글 </li>
                                <li id="tab4"> 찜한 요리 </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="tab_content">

                    <div id="tab1_content">
                        <h1 class="recipe"> 레시피 </h1>
                        <div class="main">
                            <ul class="cards">
                                <li class="cards_item">
                                    <div class="card">
                                        <div class="card_image"><img src="/img/miyuk.jpeg"></div>
                                        <div class="card_content">
                                            <h2 class="card_title">미역줄기볶음</h2><br>
                                        </div>
                                    </div>
                                </li>
                                <li class="cards_item">
                                    <div class="card">
                                        <div class="card_image"><img src="/img/shrimp.png"></div>
                                        <div class="card_content">
                                            <h2 class="card_title">갈릭버터새우</h2><br>
                                        </div>
                                    </div>
                                </li>
                                <li class="cards_item">
                                    <div class="card">
                                        <div class="card_image"><img src="/img/zzim.jpeg"></div>
                                        <div class="card_content">
                                            <h2 class="card_title">차돌박이찜</h2><br>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <!-- 요리 후기 content -->
                
                    <div id="tab2_content">
                        <h1 class="food"> 요리 후기 </h1>
                        <ul class="food_box">
                            <li class="giveFood">받은 요리 후기</li>
                            <li class="writeFood">내가 쓴 요리 후기</li>
                        </ul>
                        <div class="tab2_content1">
                            <div class="giveFood_content">
                                <div class="giveFood_content_box">
                                    <p class="message">Message</p>
                                    <p class="giveFood_message">받은 요리 후기가 없습니다.</p>
                                </div>
                            </div>
                            <div class="writeFood_content">
                                <div class="writeFood_content_box">
                                    <p class="message">Message</p>
                                    <p class="writeFood_message">내가 쓴 요리 후기가 없습니다.</p>
                                </div>
                             </div>
                        </div>
                    </div>

                    <!-- 댓글 content -->
                    <div id="tab3_content">
                        <h1 class="command"> 댓글 </h1>
                        <ul class="command_box">
                            <li class="giveCommand">받은 댓글</li>
                            <li class="writeCommand">내가 쓴 댓글</li>
                        </ul>
                        <div class="tab3_content1">
                            <div class="giveCommand_content">
                                <div class="giveCommand_content_box">
                                    <p class="message">Message</p>
                                    <p class="giveCommand_message">받은 댓글이 없습니다.</p>
                                </div>
                            </div>
                            <div class="writeCommand_content">
                                <div class="writeCommand_content_box">
                                    <p class="message">Message</p>
                                    <p class="writeCommand_message">내가 쓴 댓글이 없습니다.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 찜한 요리 content -->
                    <div id="tab4_content">
                        <h1 class="love"> 찜한 요리 </h1>
                        <div class="love_content">
                            <div class="love_content_box">
                                <p class="message">Message</p>
                                <p class="love_content_message">찜한 요리가 없습니다.</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </body>
</html>