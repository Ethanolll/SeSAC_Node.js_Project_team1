<html>
    <head>
        <title>레시피 등록 결과 화면</title>
        <meta charset="utf-8">
        <link rel = "stylesheet" href = "/css/recipe_detail.css">
        <link rel="stylesheet" href="/css/nav.css">

        <script src="https://kit.fontawesome.com/c35f3dd7d0.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <%-include('nav.ejs') %>
        <script src="/js/nav.js"></script>
        
        <div class="recipe_detail">
            <h2><%=data.title%></h2>
            <h4>작성자</h4>
            <div class="txtb1">
                <h3><%=data.user_id%></h3>
            </div>
            <h4>요리 소개</h4>
            <div class="txtb2">
                <h4><%=data.comment%></h4>
            </div>
            <% if (data.video_link != "") { %>
                <h4>동영상</h4>
                <div class="txtb3">
                    <h4><%=data.video_link%></h4>
                </div>
            <% } %>
            <h4>재료</h4>
            <div class="txtb4">
                <h4><%=data.material%></h4>
            </div>
            <h4>요리 순서</h4>
            <div class="txtb4">
                <h4><%=data.step%></h4>
            </div>
            <% for (let i=0; i<picture.length; i++) { %>
                <img src='/img/user_recipe/<%=picture[i].filename%>' style="width: 100px;">
            <% } %>
            <div class="btn">
                <button class="modify_btn">수정하기</button></a> <br>
                <a href="/user/profile"><button class="mypage_btn">마이페이지</button></a> <br>
            </div>
        </div>
    </body>
</html>