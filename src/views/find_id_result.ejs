<html>
    <head>
        <title>아이디 찾기</title>
        <meta charset="utf-8">

        <%-include('script.ejs') %>
        
        <link rel="stylesheet" href="/css/nav.css">
        
        <style>
            h2{
                width : 100%;
                margin-top: 200px;
                margin-bottom : 70px;
                font-size : 30px;
                font-weight : 700;
                color : rgb(46, 85, 67);
                text-align: center;
                
            }
            h1{
                font-size : 50px;
                color : #312D2D;
                text-align: center;
                width : 100%;
            }
            .find_btn{
                display: flex;
                justify-content: center;
            }
            .login_btn{
                        width : 150%;
                        padding : 17px;
                        margin-top: 50px;
                        margin-right: 18px;
                        border-radius : 5px;
                        cursor : pointer;
                        background-color : rgb(46, 85, 67);
                        font-size : 18px;
                        font-weight : 550;
                        color : white;
                        border : none;
            }
            .pw_btn{
                    width : 75%;
                    padding : 17px;
                    margin-left: 65px;
                    margin-right: 15px;
                    margin-top: 50px;
                    border-radius : 5px;
                    cursor : pointer;
                    background-color : rgb(186, 77, 47);
                    font-size : 18px;
                    font-weight : 550;
                    color : white;
                    border : none;
            }
        </style>
    </head>
    <body>
        <%-include('nav.ejs') %>
        <script src="/js/nav.js"></script>

        <h2>회원님의 아이디</h2>
        <h1><%=id%></h1>
        <div class="find_btn">
        <a href="/user"><button class="login_btn">로그인</button></a> <br>
        <a href="/user/find_password"><button class="pw_btn">비밀번호 찾기</button></a> <br>
        </div>
    </body>
</html>